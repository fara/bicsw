<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net">

	<description>
		Configuracion de los servicios
	</description>

	<!-- Template de configuraciÃ³n para todos los servicios -->
	<object id="serviceConfigurationTemplate" abstract="true"
          type="Spring.Aop.Framework.ProxyFactoryObject, Spring.Aop">
    
	    <property name="InterceptorNames">
			<list>
				<value>loggingInterceptor</value>	    
				<value>transactionInterceptor</value>
			</list>
	    </property>
	</object>
	
	<object id="usuarioService" parent="serviceConfigurationTemplate">
		<property name="proxyInterfaces" value="ar.com.bic.application.UsuarioService"/>
		<property name="target" ref="usuarioServiceImpl"/>
	</object>			
	<object id="usuarioServiceImpl" type="ar.com.bic.application.impl.UsuarioServiceImpl, ar.com.bic.application">
		<!-- TODO: setear el genericDAO en un template -->
		<property name="genericDAO" ref="genericDAO"/>	
		<property name="usuarioDAO" ref="usuarioDAO"/>	
	</object>

	<object id="proyectoService" parent="serviceConfigurationTemplate">
		<property name="proxyInterfaces" value="ar.com.bic.application.ProyectoService"/>
		<property name="target" ref="proyectoServiceImpl"/>
	</object>			
	<object id="proyectoServiceImpl" type="ar.com.bic.application.impl.ProyectoServiceImpl, ar.com.bic.application">
		<!-- TODO: setear el genericDAO en un template -->
		<property name="genericDAO" ref="genericDAO"/>	
	</object>

	<object id="atributoService" parent="serviceConfigurationTemplate">
		<property name="proxyInterfaces" value="ar.com.bic.application.AtributoService"/>
		<property name="target" ref="atributoServiceImpl"/>
	</object>			
	<object id="atributoServiceImpl" type="ar.com.bic.application.impl.AtributoServiceImpl, ar.com.bic.application">
		<!-- TODO: setear el genericDAO en un template -->
		<property name="genericDAO" ref="genericDAO"/>	
		<property name="proyectoDAO" ref="proyectoDAO"/>			
	</object>

</objects>

